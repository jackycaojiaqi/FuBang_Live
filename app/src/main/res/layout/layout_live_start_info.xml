<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_live_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_live_title"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@null"
            android:gravity="center"
            android:hint="给直播写个标题吧"
            android:maxLength="18"
            android:textColor="@color/gray_deep"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_live_start"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_live_start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/live_auth_info"
            android:textColor="@color/gray_deep" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_live_cancle_top"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_cancle_et" />
</RelativeLayout>