<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_room_history_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_bg"
            app:riv_corner_radius="5dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_room_history_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小心"
                android:textColor="@color/black_3a3a3a"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_room_history_gender"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_male_select" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_room_history_signe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="55dp"
            android:text="你sdascsdsad"
            android:textColor="@color/black_3a3a3a"
            android:textSize="16dp" />
    </RelativeLayout>
</LinearLayout>