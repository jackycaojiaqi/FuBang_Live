<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:background="@drawable/ic_room_anchor_info_bg">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_room_anchor_small_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_user_pic" />

        <TextView
            android:id="@+id/tv_room_anchor_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:singleLine="true"
            android:text="直播"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_room_anchor_online_num"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:gravity="left"
            android:text="123在线"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/iv_room_add_favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_room_follow" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="90dp"
        android:layout_height="26dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_room_kb"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_anchor_kbi_num"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="9999911"
            android:textColor="@color/gray"
            android:textSize="10dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/ic_room_anchor_id" />

    <TextView
        android:id="@+id/tv_anchor_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="55dp"
        android:text="888"
        android:textSize="10dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_room_audience"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="10dp"></android.support.v7.widget.RecyclerView>
</RelativeLayout>