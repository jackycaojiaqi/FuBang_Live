<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_alignTop="@+id/iv_room_up_to_mic"
        android:background="@drawable/ic_room_anchor_info_bg">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_room_anchor_small_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_user_pic" />

        <TextView
            android:id="@+id/tv_room_anchor_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:singleLine="true"
            android:text="MC 大明"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_room_anchor_online_num"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:gravity="left"
            android:text="123在线"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/iv_room_add_favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_room_follow" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="70dp"
        android:layout_height="26dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/ic_room_kb"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_anchor_kbi_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="888888"
            android:textColor="@color/gray"
            android:textSize="10dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/ic_room_anchor_id" />

    <TextView
        android:id="@+id/tv_anchor_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="65dp"
        android:text="888111"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/iv_room_up_to_mic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:src="@drawable/ic_user_pic" />

    <ImageView
        android:id="@+id/iv_room_up_to_mic2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:src="@drawable/ic_user_pic" />

    <ImageView
        android:id="@+id/iv_room_up_to_mic3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:src="@drawable/ic_user_pic" />

</RelativeLayout>