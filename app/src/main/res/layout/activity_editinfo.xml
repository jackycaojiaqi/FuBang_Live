<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_head" />

    <RelativeLayout
        android:id="@+id/rll_input_content"
        android:layout_width="match_parent"

        android:layout_height="90dp"
        android:layout_marginTop="62dp">

        <EditText
            android:id="@+id/et_edit_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:hint="点击输入信息"
            android:maxLength="20"
            android:lines="2"
            android:textColor="@color/black_3a3a3a"
            android:textColorHint="@color/gray_deep"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_edit_content_length"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="0/30"
            android:textColor="@color/gray_deep"
            android:textSize="14dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_select_content"
        android:layout_width="100dp"

        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_male"
                android:button="@null"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/male" />

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_female"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text="@string/female" />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>