<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="280dp"
    android:background="@drawable/ic_live_setting_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_pop_setting_title"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_live_setting_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="直播标题"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:textColor="@color/black_3a3a3a"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pop_setting_share"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_live_setting_share"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="分享直播"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:textColor="@color/black_3a3a3a"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pop_setting_camera_change"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_live_setting_change_camera"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="翻转镜头"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:textColor="@color/black_3a3a3a"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pop_setting_beautify"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_live_setting_beautify"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="美颜开关"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:textColor="@color/black_3a3a3a"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pop_setting_mirror"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_live_setting_mirror"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="镜像开关"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:textColor="@color/black_3a3a3a"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>