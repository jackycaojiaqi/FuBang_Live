<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_80"
    android:orientation="vertical">

    <GridView
        android:id="@+id/room_gift_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:numColumns="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/gift_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="送给"
            android:textColor="@color/home_tab_backgroud" />

        <TextView
            android:id="@+id/gift_to_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:text="主播"
            android:textColor="@color/home_tab_backgroud"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textColor="@color/home_tab_backgroud" />

        <EditText
            android:id="@+id/gift_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/home_tab_backgroud" />


        <Button
            android:id="@+id/gift_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
             android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shap_rec_30dp_login_wechat"
            android:text="赠送"
            android:textColor="@color/black_3a3a3a" />

    </LinearLayout>

</LinearLayout>