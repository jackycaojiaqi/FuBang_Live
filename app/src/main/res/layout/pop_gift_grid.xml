<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5e000000"
    android:orientation="vertical">

    <GridView
        android:id="@+id/room_gift_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gift_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="送给"
            android:textColor="@color/home_tab_backgroud" />

        <EditText
            android:id="@+id/gift_to_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/home_tab_backgroud"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textColor="@color/home_tab_backgroud" />

        <EditText
            android:id="@+id/gift_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/home_tab_backgroud" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/bottom_radio_checked_text"
            app:cardCornerRadius="8dp">

            <Button
                android:id="@+id/gift_send_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/bottom_radio_checked_text"
                android:text="赠送"
                android:textColor="@color/home_tab_backgroud" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>