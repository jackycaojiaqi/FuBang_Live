<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_room_fans_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_user_pic"
            app:riv_corner_radius="5dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_room_fans_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小心"
                android:textColor="@color/black_3a3a3a"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_room_fans_gender"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_male_select" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_room_fans_signe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="45dp"
            android:text="你"
            android:textColor="@color/black_3a3a3a"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_add_fav" />
    </RelativeLayout>
</LinearLayout>